@model Web.Models.Exercise

@{
    ViewBag.Title = "Edit";
}
@section Levels
{
    <link rel="stylesheet" href="~/Content/Levels.css">

}
<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div class="col-md-offset-3 col-md-6 col-sm-6 col-sm-offset-3">
                @Html.LabelFor(model => model.ExerciseTypeID, "Tipo de ejercicio", htmlAttributes: new { @class = "control-label col-form-label" })
                @Html.DropDownList("ExerciseTypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExerciseTypeID, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-form-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-form-label" })
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                <input type="submit" value="Save" class="btn btn-inicial" />
            </div>
        </div>
    </div>
}

<div class="volver">
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
