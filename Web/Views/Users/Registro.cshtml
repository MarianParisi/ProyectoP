@model Web.Models.User

@{
    ViewBag.Title = "Registro";
}
@section Levels
{
    <link rel="stylesheet" href="~/Content/Levels.css">

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Nuevo Usuario</h3>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                <label class="col-form-label" for="formGroupExampleInput" type="text" name="name" required>Ingrese su nombre</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
                  
            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                <label class="col-form-label" for="formGroupExampleInput" type="text" name="name" required>Ingrese su apellido</label>
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                <label class="col-form-label" for="exampleFormControlInput1" type="email" name="email" required>Ingrese su correo electronico</label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
         
            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                <label for="exampleFormControlInput1" type="email" name="email" required>Ingrese su contraseña </label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
                   <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                <input type="submit" value="Registrarme" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div>
  <a class="btn btn-inicial" href="@Url.Action("Index", "Home")">Volver</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
